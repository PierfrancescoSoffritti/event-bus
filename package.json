{
  "name": "event-bus.js",
  "version": "0.0.0-development",
  "description": "Event bus module for node and the browser.",
  "main": "build/index.js",
  "scripts": {
    "test": "nyc --reporter=html --reporter=text mocha ./tests/*_test.js --compilers js:@babel/register",
    "report-coverage": "nyc report --reporter=text-lcov | codecov",
    "prebuild": "rimraf build",
    "build:babel": "babel --out-dir build src",
    "build:release": "rollup -c && rollup -c rollup.config.minify.js"
  },
  "author": "Pierfrancesco Soffritti <soffritti.pierfrancesco@gmail.com> (https://pierfrancescosoffritti.com/)",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.2.2",
    "@babel/node": "7.2.2",
    "@babel/preset-env": "7.2.3",
    "@babel/register": "7.0.0",
    "chai": "4.2.0",
    "codecov.io": "0.1.6",
    "ghooks": "2.0.4",
    "mocha": "5.2.0",
    "nyc": "13.1.0",
    "rimraf": "2.6.3",
    "rollup": "1.1.0",
    "rollup-plugin-babel": "4.3.0",
    "rollup-plugin-babel-minify": "7.0.0",
    "sinon": "7.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PierfrancescoSoffritti/event-bus.git"
  },
  "keywords": [
    "eventbus",
    "event-bus",
    "event",
    "bus"
  ],
  "files": [
    "build",
    "README.md",
    "LICENSE"
  ],
  "config": {
    "ghooks": {
      "pre-commit": "npm run test"
    }
  }
}
